{
  "name": "collabsentinel",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron": "^31.0.0"
  },
  "build": {
    "appId": "com.collabsentinel.app",
    "win": { 
      "target": "nsis",
      "arch": ["x64", "ia32"]
    },
    "mac": {
      "target": "dmg",
      "arch": ["x64"]
    },
    "files": ["**/*", "!backend/**"]
  }
}
